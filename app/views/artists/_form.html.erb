
<%= form_with(model: @artist, local: true, class: "ui form") do |f| %>
  <div Class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, placeholder: "Name" %>
  <%= f.label :genre %>
  <%= f.text_field :genre, required: true, placeholder: "Genre" %>
  <%= f.label :avatar %>
  <%= f.text_field :avatar, placeholder: "Avatar" %>
  <%= f.submit%>
  </div>
<% end %>